import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner CO = new Scanner(System.in);
		int t = CO.nextInt();
		while(t-->0){
		  int x = CO.nextInt();
		  int y = CO.nextInt();
		  System.out.println(x*4 + y);
		}

	}
}
